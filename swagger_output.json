  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string",
          "example": "johndoe"
        },
        "password": {
          "type": "string",
          "example": "securepassword123"
        },
        "displayName": {
          "type": "string",
          "example": "John Doe"
        }
      }
    },
    "Theme": {
      "type": "object",
      "required": [
        "name",
        "fontFamily",
        "fontSize",
        "colors"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Modern Minimalist"
        },
        "fontFamily": {
          "type": "string",
          "example": "Roboto"
        },
        "fontSize": {
          "type": "integer",
          "example": 16
        },
        "inspiration": {
          "type": "string",
          "example": "Clean lines and subtle colors."
        },
        "colors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "#FFFFFF",
            "#F0F0F0",
            "#333333",
            "#007BFF"
          ]
        }
      }
    }
