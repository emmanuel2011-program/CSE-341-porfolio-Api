{
    "swagger": "2.0",
    "info": {
      "title": "Portfolio Builder API",
      "description": "API for managing users and themes for a portfolio builder application.",
      "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "tags": [
      { "name": "user", "description": "User management" },
      { "name": "theme", "description": "Theme management" }
    ],
    "paths": {
      "/user": {
        "get": {
          "tags": ["user"],
          "summary": "Get all users",
          "responses": {
            "200": { "description": "List of users" }
          }
        },
        "post": {
          "tags": ["user"],
          "summary": "Create a new user",
          "parameters": [{
            "in": "body",
            "name": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/User" }
          }],
          "responses": {
            "201": { "description": "User created" }
          }
        }
      },
      "/user/{username}": {
        "get": {
          "tags": ["user"],
          "summary": "Get user by username",
          "parameters": [{
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }],
          "responses": {
            "200": { "description": "User details" },
            "404": { "description": "User not found" }
          }
        },
        "put": {
          "tags": ["user"],
          "summary": "Update user",
          "parameters": [
            {
              "name": "username",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": { "$ref": "#/definitions/User" }
            }
          ],
          "responses": {
            "204": { "description": "User updated" }
          }
        },
        "delete": {
          "tags": ["user"],
          "summary": "Delete user",
          "parameters": [{
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }],
          "responses": {
            "204": { "description": "User deleted" }
          }
        }
      },
      "/theme": {
        "get": {
          "tags": ["theme"],
          "summary": "Get all themes",
          "responses": {
            "200": { "description": "List of themes" }
          }
        },
        "post": {
          "tags": ["theme"],
          "summary": "Create a new theme",
          "parameters": [{
            "in": "body",
            "name": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Theme" }
          }],
          "responses": {
            "201": { "description": "Theme created" }
          }
        }
      },
      "/theme/{themeName}": {
        "get": {
          "tags": ["theme"],
          "summary": "Get theme by name",
          "parameters": [{
            "name": "themeName",
            "in": "path",
            "required": true,
            "type": "string"
          }],
          "responses": {
            "200": { "description": "Theme details" },
            "404": { "description": "Theme not found" }
          }
        },
        "put": {
          "tags": ["theme"],
          "summary": "Update theme",
          "parameters": [
            {
              "name": "themeName",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": { "$ref": "#/definitions/Theme" }
            }
          ],
          "responses": {
            "204": { "description": "Theme updated" }
          }
        },
        "delete": {
          "tags": ["theme"],
          "summary": "Delete theme",
          "parameters": [{
            "name": "themeName",
            "in": "path",
            "required": true,
            "type": "string"
          }],
          "responses": {
            "204": { "description": "Theme deleted" }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "displayName": { "type": "string" }
        }
      },
      "Theme": {
        "type": "object",
        "required": ["name", "fontFamily", "fontSize", "colors"],
        "properties": {
          "name": { "type": "string" },
          "fontFamily": { "type": "string" },
          "fontSize": { "type": "integer" },
          "inspiration": { "type": "string" },
          "colors": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
  